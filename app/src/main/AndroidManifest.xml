<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.sites">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.SettingsActivity"
            android:parentActivityName=".activities.SiteListActivity"
            android:label="@string/title_activity_settings">
        </activity>

        <activity
            android:name=".activities.login.LoginAcitivity"
            android:label="@string/title_activity_login">
        </activity>

        <activity
            android:name=".activities.map.SiteMapsActivity"
            android:label="@string/title_activity_map"
            android:launchMode="singleTop">
        </activity>

        <activity
            android:name=".activities.location.LocationActivity"
            android:label="@string/title_activity_location">
        </activity>

        <activity
            android:name=".activities.SiteListActivity"
            android:label="@string/title_activity_site_list">
        </activity>

        <activity
            android:name=".activities.SiteActivity"
            android:parentActivityName=".activities.SiteListActivity"
            android:label="@string/title_activity_site">
        </activity>

        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>